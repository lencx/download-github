{
  "name": "dgh",
  "version": "0.2.0",
  "description": "Download directory from a GitHub repo",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "author": "lencx <cxin1314@gmail.com>",
  "license": "MIT",
  "bin": {
    "dgh": "bin/dgh.js"
  },
  "scripts": {
    "dgh": "esno src/cli.ts",
    "dev": "npm run build -- --watch",
    "build": "tsup src/cli.ts src/index.ts --dts --minify --format cjs,esm",
    "prepublishOnly": "npm run build",
    "release": "npx bumpp --push --tag --commit && npm publish"
  },
  "files": [
    "bin",
    "dist"
  ],
  "keywords": [
    "dgh",
    "cli",
    "repo",
    "github",
    "download",
    "directory",
    "github-download"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lencx/download-github"
  },
  "bugs": {
    "url": "https://github.com/lencx/download-github/issues"
  },
  "homepage": "https://github.com/lencx/download-github/tree/main#readme",
  "devDependencies": {
    "@types/adm-zip": "^0.4.34",
    "@types/fs-extra": "^9.0.13",
    "@types/minimist": "^1.2.2",
    "@types/node": "^16.11.6",
    "@types/request": "^2.48.7",
    "@types/rimraf": "^3.0.2",
    "@types/uuid": "^8.3.3",
    "esno": "^0.10.1",
    "tsup": "^5.5.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "adm-zip": "^0.5.9",
    "chalk": "^4.1.2",
    "fs-extra": "^10.0.0",
    "minimist": "^1.2.5",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "spinnies": "^0.5.1",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=12.2.0"
  }
}
